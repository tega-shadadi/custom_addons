<odoo>
    <!-- Form view for Purchase Requests -->
    <record id="view_purchase_request_form" model="ir.ui.view">
        <field name="name">purchase.request.form</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <form string="Purchase Request">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="employee_id"/>
                        <field name="product_id"/>
                        <field name="quantity"/>
                        <field name="state" readonly="1"/>
                    </group>
                    <footer>
                        <button name="action_create_rfq"
                                type="object"
                                string="Create RFQ"
                                class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view for Purchase Requests -->
    <record id="view_purchase_request_list" model="ir.ui.view">
        <field name="name">purchase.request.list</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <list string="Purchase Requests">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Action for the menu -->
    <record id="action_purchase_request" model="ir.actions.act_window">
        <field name="name">Purchase Requests</field>
        <field name="res_model">purchase.request</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu items -->
    <menuitem id="menu_purchase_request_root" name="Purchase Requests"/>
    <menuitem id="menu_purchase_request_requests" 
              name="Requests" 
              parent="menu_purchase_request_root" 
              action="action_purchase_request"/>
</odoo>
